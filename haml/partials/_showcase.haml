.showcase.section-padding.border-top-light-grey
	.row.showcase-title
		.large-12.small-12.columns
			%h3.strong.heading-40
				= title
	.row.showcase-cover
		%a(href="#{url}")
			%img.cover(src="./img/covers/#{cover}" data-interchange="[./img/covers/large/#{cover}, (small)]" alt="#{cover_alt}" width="970" height="300")
	- if !subtitle.empty?
		.row
			.large-9.small-12.columns.showcase-info
				%p.text-dark-grey
					= subtitle
				%a.small.button.radius(href="#{url}")
					= button