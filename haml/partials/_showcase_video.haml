.showcase.section-padding.border-top-light-grey
	.row.showcase-title
		.large-12.small-12.columns
			%h3.strong.heading-40
				= title
	.showcase-cover.toggle-video(id="#{elem_id}" data-video-id="#{video_id}")
		.video-cover
			%img.cover(src="./img/covers/#{cover}" alt="#{cover_alt}" width="1920" height="300")
			%img.play.absolute-center(src="./img/play.png" alt="Play a video." width="152" height="153")
	.row
		.large-12.small-12.columns.showcase-info
			%p.italic
				= subtitle
			.small.button.radius.toggle-video
				Watch the video